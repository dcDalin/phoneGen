doctype html
html
  head
    link(rel='stylesheet' href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" id="bootstrap-css")
    link(rel='stylesheet' href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous")
    title Phone Gen App
  body 
    div(class="container")
      br
      
      div(class="row justify-content-center")
        div(class="col-12 col-md-10 col-lg-8")
          h2 Phone Number Generator
          br
          form(class="card card-sm" method="POST", action="/generate")
            div(class="card-body row no-gutters align-items-center")
              div(class="col-auto")
                i(class="fas fa-search h4 text-body")
              div(class="col")
                input(class="form-control form-control-lg form-control-borderless" required name="howMany" type="number" min="1" max="10000" placeholder="How Many Numbers")
              div(class="col-auto")
                button(class="btn btn-lg btn-success" type="submit" value="submit") Generate
          br
          div(class="list-group")
            each phoneNumber, i in phoneNumbers
              li(class="list-group-item")= phoneNumber

    script(src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")